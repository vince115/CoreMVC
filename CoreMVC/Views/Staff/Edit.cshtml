@model CoreMVC.Models.Staff

@{
    ViewData["Title"] = "編輯員工";
}

<h1>編輯員工</h1>

<!-- 返回員工列表的連結 -->
<p>
    <a asp-action="Index" class="btn btn-secondary">返回員工列表</a>
</p>

<!-- 編輯員工表單 -->
<form asp-action="Edit" method="post">
    <!-- 隱藏欄位：員工 ID，用於識別員工 -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <!-- 員工姓名輸入框 -->
        <label asp-for="Name" class="control-label">姓名</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span> <!-- 驗證訊息 -->
    </div>
    <div class="form-group">
        <!-- 職位輸入框 -->
        <label asp-for="Position" class="control-label">職位</label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span> <!-- 驗證訊息 -->
    </div>
    <div class="form-group">
        <!-- 薪資輸入框 -->
        <label asp-for="Salary" class="control-label">薪資</label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span> <!-- 驗證訊息 -->
    </div>
    <div class="form-group">
        <!-- 提交表單按鈕 -->
        <button type="submit" class="btn btn-primary">儲存變更</button>
    </div>
</form>

<!-- 驗證腳本 -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
